  <script>
      // 載入 ckeditor 套件
      CKEDITOR.replaceClass = 'editor';

      // ckeditor 顯示
      $('.respondBtn .reply').click(function(event) {
          // 隱藏 respondBtn
          $(this).parent().parent().toggleClass('hide');
          // 顯示 ckeditor
          $(this).parent().parent().parent().find('.respondForm').addClass('show')
          // 移除其他 ckeditor 顯示
          $(this).parent().parent().parent().siblings().find(this).removeClass('show');
      });

      // ckeditor 關閉
      $('.cancel').click(function(){  
          $('.respondBtn').removeClass('hide');
          $('.respondForm').removeClass('show');
      });
  </script>
